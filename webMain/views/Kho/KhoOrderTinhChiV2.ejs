<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../block/head %>
    <link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/kho/KhoOrderTinhChiV2.css">
    <link rel="stylesheet" href="/css/buttons.bootstrap4.min.css">
</head>

<body class="nav-md footer_fixed">

    
        <div class="container body">
            <div class="main_container">
                <% include ../block/leftpanelV2 %>
                    <% include ../block/toppanelV2 %>
                    <form action="/kho/ordertinhchiv2" method="POST">
                        <!-- page content -->
                        <div class="right_col " role="main" style="min-height: 100vh">
                            <div class="">
                                <div class="page-title">
                                    <div class="title_left">
                                        <h3> <small><strong></strong></small></h3>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Order Search <small></small></h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <br>

                                                <label class="col-form-label col-md-1 col-sm-1 label-align" for="first-name">Order No <span class="required">*</span> </label>
                                                <div class="col-md-1 col-sm-1 ">
                                                    <select class="form-control" name="selectNam">
                                                      <%  if( arrNamSelect) { %>
                                                          <%  for(var i= 0; i< arrNamSelect.length; i++) { %>
                                                                  <%  if( arrNamSelect[i].values  === selectNam ) { %>
                                                                        <option value="<%-arrNamSelect[i].values %>" selected> <%=arrNamSelect[i].name %> </option>
                                                                  <%  } else { %>
                                                                        <option value="<%-arrNamSelect[i].values %>"> <%=arrNamSelect[i].name %> </option>
                                                                   <% } %>
                                                          <%  } %>
                                                      <%  } else { %>
                                                        <option> </option>
                                                      <%  } %>
                                                    </select>
                                                </div>
                                        
                                                <label class="col-form-label col-md-1 col-sm-1 label-align" for="first-name">Khách Hàng <span class="required">*</span>
                                                </label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    <select class="form-control" name="selectKH">
                                                        <option value="03"> 03:SPA</option>
                                                    </select>
                                                </div>
                                                <!-- hang tren -->
                                          
                                                <div class="col-md-1 col-sm-1 ">
                                                    <button type="submit" name="bsubmit" value="submitSearch" class="btn btn-primary" id="btnSearchId">Search</button>

                                                </div>
                                                
                                                <!-- hang tren -->
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Danh Sách Tính Chỉ Theo Đơn Hàng</h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a> </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content" id="xcontentid">
                                            <table class="table table-striped table-bordered mydatatable" style="width: 100%;">
                                                <thead>
                                                    <tr>
                                                        <!-- <th>A</th>
                                                        <th>B </th>
                                                        <th>C</th>
                                                        <th>D</th> -->
                                                        <th>ORDER NO </th>
                                                        <th>Loại Chỉ </th>
                                                        <th>Màu Chỉ </th>
                                                        <th>Số Lượng Chỉ Đặt (Mét)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (arrOrder) { %>
                                                        <% for( var i=0 ; i < arrOrder.length ; i++) { %>
                                                            <tr>
                                                                <td>
                                                                    <%=arrOrder[i].ORDERNO %>
                                                                </td>
                                                                <td>
                                                                    <%=arrOrder[i].LOAICHI %>
                                                                </td>
                                                                <td>
                                                                    <%=arrOrder[i].MAUCHI %>
                                                                </td>
                                                                <td>
                                                                    <%=arrOrder[i].SLCHI %>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td> Empty </td>
                                                                        <td> Empty </td>
                                                                        <td> Empty </td>
                                                                        <td> Empty </td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                            
                                            </table>
                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /page content -->

                        <!-- footer content -->
                        <footer>
                            <div class="pull-right">
                                Wacoal - Bootstrap Admin Template by <a href="/home">Thai Hoa</a>
                            </div>
                            <div class="clearfix"></div>
                        </footer>
                        <!-- /footer content -->
            </div>
        </div>
        <% include ../block/script %>
        <!-- <script src="/js/jquery-3.5.1.min.js"> </script> -->
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/jquery.dataTables.min.js"></script>
        <script src="/js/dataTables.bootstrap4.min.js"></script>
       
        <script src="/js/dataTables.buttons.min.js"></script>
        <script src="/js/buttons.bootstrap4.min.js"></script>
        <script src="/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script src="/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
        <script src="/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
        <script src="/buttons/1.6.5/js/buttons.html5.min.js"></script>
        <script src="/buttons/1.6.5/js/buttons.print.min.js"></script>
        <script src="/buttons/1.6.5/js/buttons.colVis.min.js"></script>
        <script src="/javascripts/kho/KhoOrderTinhChiV2js.js"></script>
    </form>
</body>

</html>