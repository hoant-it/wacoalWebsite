    <script>
        var hsqd;
        var loaimui=0;
        var matdo=0
        $(document).ready(function(){
            $("select.MatDo").change(function(){
                //get value select option
                var selectedCountry = $(this).children("option:selected").val();
                //get name value option
                var selectedCountry1 = $(this).children('option:selected').text();
                hsqd=selectedCountry;
                matdo=selectedCountry1;
                alert("You have selected the country - " + selectedCountry1);
            });

            $("select.loaimui").change(function(){
                var selectloaiMui = $(this).children("option:selected").val();
                // alert("You have selected the country - " + selectloaiMui);
               if(selectloaiMui==='C'){
                loaimui=12*25.4;
                alert("You have selected the country - " + loaimui);
               }
               else
               {
                loaimui= 0;
               }
                // alert("You have selected the country - " + selectedCountry);
            });

            $(".cdcd").change(function(){
                var value=$(this).val();
                var c = parseFloat((parseFloat(value) +(parseFloat(loaimui)/matdo)) * parseFloat(hsqd) * 1.07 / 1000).toFixed(2); ;
                document.getElementById("smctId").value=c.toString();
                document.getElementById("smcdId").value=c.toString();
            });

        });
